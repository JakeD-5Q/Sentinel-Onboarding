{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspace": {
            "type": "String"
        }
    },
    "resources": [
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/AutomationRules/20d0a889-3733-42b3-b1ac-e8808eed3d8b')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/20d0a889-3733-42b3-b1ac-e8808eed3d8b')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/automationRules",
            "properties": {
                "displayName": "Rare and potentially high-risk Office operations",
                "order": 31,
                "triggeringLogic": {
                    "isEnabled": true,
                    "triggersOn": "Incidents",
                    "triggersWhen": "Created",
                    "conditions": [
                        {
                            "conditionType": "Property",
                            "conditionProperties": {
                                "propertyName": "IncidentRelatedAnalyticRuleIds",
                                "operator": "Contains",
                                "propertyValues": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/b6c27711-a8ea-43d0-adf3-c701543c576a')]"
                            }
                        },
                        {
                            "conditionType": "Property",
                            "conditionProperties": {
                                "propertyName": "AccountName",
                                "operator": "Equals",
                                "propertyValues": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/SYSTEM (w3wp)')]"
                            }
                        }
                    ]
                },
                "actions": [
                    {
                        "order": 1,
                        "actionType": "ModifyProperties",
                        "actionConfiguration": {
                            "severity": null,
                            "status": "Closed",
                            "classification": "BenignPositive",
                            "classificationReason": "SuspiciousButExpected",
                            "classificationComment": null,
                            "owner": null,
                            "labels": null
                        }
                    },
                    {
                        "order": 2,
                        "actionType": "ModifyProperties",
                        "actionConfiguration": {
                            "severity": null,
                            "status": null,
                            "classification": null,
                            "classificationReason": null,
                            "classificationComment": null,
                            "owner": {
                                "objectId": "8ca2fbd0-263f-4bb8-86f5-6eee0ca77f74",
                                "email": "Sentinel@5qcloud.com",
                                "assignedTo": "Sentinel",
                                "userPrincipalName": "Sentinel@5qcloud.com"
                            },
                            "labels": null
                        }
                    }
                ]
            }
        }
    ]
}

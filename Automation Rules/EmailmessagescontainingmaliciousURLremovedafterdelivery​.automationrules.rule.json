{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspace": {
            "type": "String"
        }
    },
    "resources": [
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/AutomationRules/f142ba97-0aba-49d1-b204-c6ba5c596452')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/f142ba97-0aba-49d1-b204-c6ba5c596452')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/automationRules",
            "properties": {
                "displayName": "Email messages containing malicious URL removed after deliveryâ€‹",
                "order": 32,
                "triggeringLogic": {
                    "isEnabled": true,
                    "triggersOn": "Incidents",
                    "triggersWhen": "Created",
                    "conditions": [
                        {
                            "conditionType": "Property",
                            "conditionProperties": {
                                "propertyName": "IncidentRelatedAnalyticRuleIds",
                                "operator": "Contains",
